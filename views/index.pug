extends layout

block content
  .container
    .row
      .col-md-4.col-md-offset-4
        .login-panel.panel.panel-default
          .panel-heading
            img( class='logo-login',src='/images/logo.png')
            h3.panel-title Please Sign In
          .panel-body
            form(method='POST', action='/login', role='form')
              fieldset
                .form-group
                  input.form-control(placeholder='Email', name='email', autofocus='')
                .form-group
                  input.form-control(placeholder='Password', name='password', type='password', value='')
                .checkbox
                  label
                    input(name='remember', type='checkbox', value='Remember Me')
                    | Remember Me
                input.btn.btn-lg.btn-success.btn-block(value='Log in', type='submit')
                a(href='/signup') O registrate
                a.btn.btn-block.btn-social.btn-twitter(href='/auth/twitter')
                  span.fa.fa-twitter
                  |  Sign in with Twitter
                a.btn.btn-block.btn-social.btn-facebook(href='/auth/facebook')
                  span.fa.fa-facebook
                  |  Sign in with Facebook
                a.btn.btn-block.btn-social.btn-google(href='/auth/google')
                  span.fa.fa-google
                  |  Sign in with Google
