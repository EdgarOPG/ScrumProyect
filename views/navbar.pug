extends layout

block content
  #wrapper
  // Navigation
  nav.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0')
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/dashboard/')
        img( class='logo', src='/images/logo.png')
    // /.navbar-header
    ul.nav.navbar-top-links.navbar-right
      li.dropdown
        a.dropdown-toggle(data-toggle='dropdown', href='/logout')
          i.fa.fa-sign-out.fa-fw
      // /.dropdown
    // /.navbar-top-links
    .navbar-default.sidebar(role='navigation')
      .sidebar-nav.navbar-collapse
        ul#side-menu.nav
          li.sidebar-search
            .input-group.custom-search-form
              input.form-control(type='text', placeholder='Search...')
              span.input-group-btn
                button.btn.btn-default(type='button')
                  i.fa.fa-search
            // /input-group
          li
            a.profile-sidebar(href=`/profile/${user._id}/`)
              .profile-userpic
                img.img-responsive(src='/images/profile.jpg', alt='')
                .profile-usertitle
                  .profile-usertitle-name #{user.usuario}
                  .profile-usertitle-job  Developer
          li
            a(href='/projects/')
              i.fa.fa-folder-open.fa-fw
              |  Projects
      // /.sidebar-collapse
    // /.navbar-static-side
  // Page Content
  #page-wrapper
    .container-fluid
      .row
        .col-lg-12
          block navbar
        // /.col-lg-12
      // /.row
    // /.container-fluid
  // /#page-wrapper
  // /#wrapper
