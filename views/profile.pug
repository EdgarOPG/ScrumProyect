extends navbar

block navbar
  h1.page-header Profile
  // /.col-lg-12
  // /.row
  .row
  .col-lg-12
  .panel.panel-default
    .panel-heading
      | Datos de usuario
    // /.panel-heading
    .panel-body
      #dataTables-example_wrapper.dataTables_wrapper.form-inline.dt-bootstrap.no-footer
        .row
          .col-lg-12
            .col-xs-12.col-sm-4
              figure
                img.img-responsive(alt='', src='http://placehold.it/300x300')
              .row
                .col-xs-12.social-btns
                  .col-xs-3.col-md-1.col-lg-1.social-btn-holder
                    a.btn.btn-social.btn-block.btn-google(href='#')
                      i.fa.fa-google
                  .col-xs-3.col-md-1.col-lg-1.social-btn-holder
                    a.btn.btn-social.btn-block.btn-facebook(href='#')
                      i.fa.fa-facebook
                  .col-xs-3.col-md-1.col-lg-1.social-btn-holder
                    a.btn.btn-social.btn-block.btn-twitter(href='#')
                      i.fa.fa-twitter
                  .col-xs-3.col-md-1.col-lg-1.social-btn-holder
                    a.btn.btn-social.btn-block.btn-linkedin(href='#')
                      i.fa.fa-linkedin
                  .col-xs-3.col-md-1.col-lg-1.social-btn-holder
                    a.btn.btn-social.btn-block.btn-github(href='#')
                      i.fa.fa-github
                  .col-xs-3.col-md-1.col-lg-1.social-btn-holder
                    a.btn.btn-social.btn-block.btn-stackoverflow(href='#')
                      i.fa.fa-stack-overflow
            .col-xs-12.col-sm-8
              ul.list-group
                li.list-group-item
                  i.fa.fa-user
                  |  #{user.nombre} #{user.primerApellido} #{user.segundoApellido}
                li.list-group-item
                  i.fa.fa-address-card
                  |  #{user.curp}
                li.list-group-item #{user.rfc}
                li.list-group-item
                  i.fa.fa-home
                  |  #{user.domicilio}
                //li.list-group-item
                  //i.fa.fa-phone
                  //|  000-000-0000
                li.list-group-item
                  i.fa.fa-envelope
                  |  #{user.email}
        h4 Language and Platform Skills
        ul.list-group
          a.list-group-item.inactive-link(href='#')
            .progress
              .progress-bar.progress-bar-success(data-placement='top', style='width: 80%;', aria-valuemax='100', aria-valuemin='0', aria-valuenow='80', role='progressbar')
                span.sr-only 80%
                span.progress-type Java/ JavaEE/ Spring Framework
            .progress
              .progress-bar.progress-bar-success(data-placement='top', style='width: 70%;', aria-valuemax='100', aria-valuemin='0', aria-valuenow='1', role='progressbar')
                span.sr-only 70%
                span.progress-type PHP/ Lamp Stack
            .progress
              .progress-bar.progress-bar-success(data-placement='top', style='width: 70%;', aria-valuemax='100', aria-valuemin='0', aria-valuenow='1', role='progressbar')
                span.sr-only 70%
                span.progress-type JavaScript/ NodeJS/ MEAN stack
            .progress
              .progress-bar.progress-bar-warning(data-placement='top', style='width: 65%;', aria-valuemax='100', aria-valuemin='0', aria-valuenow='1', role='progressbar')
                span.sr-only 65%
                span.progress-type Python/ Numpy/ Scipy
            .progress
              .progress-bar.progress-bar-warning(data-placement='top', style='width: 60%;', aria-valuemax='100', aria-valuemin='0', aria-valuenow='60', role='progressbar')
                span.sr-only 60%
                span.progress-type C
            .progress
              .progress-bar.progress-bar-warning(data-placement='top', style='width: 50%;', aria-valuemax='100', aria-valuemin='0', aria-valuenow='50', role='progressbar')
                span.sr-only 50%
                span.progress-type C++
            .progress-meter
              .meter.meter-left(style='width: 25%;')
                span.meter-text I suck
              .meter.meter-left(style='width: 25%;')
                span.meter-text I know little
              .meter.meter-right(style='width: 30%;')
                span.meter-text I'm a guru
              .meter.meter-right(style='width: 20%;')
                span.meter-text I''m good
            div(ng-controller='ControladorTareas')
              p {{var}}
              ul
                li(ng-repeat='tarea in tareas')
                  p {{tarea.texto}}
                  input(type='checkbox', ng-model='tarea.hecho')
      .bs-callout.bs-callout-danger
      form(name='delete-user', id='form-delete-user', method='POST', action=`/users/${user._id}?_method=DELETE`)
        a( type='button', href='./edit/', class='btn btn-primary') Editar
        input(type='submit', class="btn btn-danger", value='Eliminar')
    // resume
